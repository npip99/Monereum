{
  "name": "monereum-frontend",
  "version": "1.0.0",
  "description": "Frontend for a Monereum market and wallet platform",
  "main": "main.js",
  "scripts": {
    "serve": "cd ../ && serve && cd ./js",
    "watch": "watchify main.js -d -o ./static/bundle.js -v [ babelify --presets [ @babel/preset-env ] ]",
    "build": "mkdir -p static && browserify main.js -t [ babelify --presets [ @babel/preset-env ] ] | uglifyjs -mco ./static/bundle.js"
  },
  "dependencies": {
    "big-integer": "^1.6.36",
    "bn.js": "^4.11.8",
    "crypto-js": "^3.1.9-1",
    "left-pad": "^1.3.0"
  },
  "author": "Nicholas Pipitone",
  "license": "GPLv3",
  "devDependencies": {
    "@babel/cli": "^7.0.0-0",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babelify": "^10.0.0",
    "browserify": "^14.1.0",
    "serve": "^10.1.1",
    "uglify-js": "^2.8.14",
    "watchify": "^3.7.0"
  }
}
