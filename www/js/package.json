{
  "name": "monereum-frontend",
  "version": "1.0.0",
  "description": "Frontend for a Monereum market and wallet platform",
  "main": "main.js",
  "scripts": {
    "watch": "watchify main.js -d -o ./static/bundle.js -v [ babelify --presets [es2015] ]",
    "build": "browserify main.js -t [ babelify --presets es2015 ] | uglifyjs -mco ./static/bundle.js"
  },
  "dependencies": {
    "big-integer": "^1.6.36",
    "bn.js": "^4.11.8",
    "left-pad": "^1.3.0"
  },
  "author": "Nicholas Pipitone",
  "license": "GPLv3",
  "devDependencies": {
    "babelify": "^7.2.0",
    "browserify": "^14.1.0",
    "watchify": "^3.7.0",
    "babel-preset-es2015": "^6.24.0",
    "uglify-js": "^2.8.14"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
